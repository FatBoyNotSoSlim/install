# FUNCTIONS ####################################################################
common_message() {
tee <<-EOF

━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
$1
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
$2
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
EOF
}

common_number() {
  read -p '↘️  Type Selection | Press [Enter]: ' typed < /dev/tty
}
common_message "🚀 PG Install Interface" "💾 Type a PG Version to Install

alpha bravo

[Z] Exit Interface"
common_number
